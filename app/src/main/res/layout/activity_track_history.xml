<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/loading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_update_location"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/no_update_location"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout">
        <RelativeLayout
            android:id="@+id/mapholder"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
            <ImageView
                android:id="@+id/current_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:background="@drawable/loc_now"/>
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:id="@+id/linear">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/order_box"
                    android:layout_gravity="top"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/vendor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Vendor"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/ref_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="ref id"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joid"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/joid"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/origin_indicator"
                                android:visibility="visible"
                                android:layout_width="30dp"
                                android:layout_height="30dp">
                                <ImageView
                                    android:id="@+id/drop_origin_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drop"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@+id/pickup_origin_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/pickup"
                                    android:visibility="gone"/>
                            </RelativeLayout>
                            <TextView
                                android:layout_marginLeft="4dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="origin"
                                android:id="@+id/origin"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="7dp"
                                android:visibility="invisible"
                                android:src="@drawable/location_a"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/destination_indicator"
                                android:visibility="visible"
                                android:layout_width="30dp"
                                android:layout_height="30dp">
                                <ImageView
                                    android:id="@+id/drop_destination_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/drop"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@+id/pickup_destination_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/pickup"
                                    android:visibility="gone"/>
                            </RelativeLayout>
                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="4dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="destination"
                                android:id="@+id/destination"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/accept_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="has confirmed by vendor at "
                    android:textAlignment="textEnd"
                    android:textSize="12dp"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/historylist"/>
    </LinearLayout>
</RelativeLayout>
